<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <android.support.design.widget.TextInputLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/email_textinputlayout"
     android:hint="Email"
     android:layout_margin="6dp"
     >
     <android.support.design.widget.TextInputEditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/email_txt"
         android:inputType="textEmailAddress"
         />

 </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/device_textinputlayout"
        android:hint="Device Name"
        android:layout_below="@+id/email_textinputlayout"
        android:layout_margin="6dp"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/device_txt"
            android:inputType="text"
            />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_textinputlayout"
        android:hint="Switch Name"
        android:layout_below="@+id/device_textinputlayout"
        android:layout_margin="6dp"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_txt"
            android:inputType="text"
            />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>