<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<fr.ganfra.materialspinner.MaterialSpinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/select_dependent"
    app:ms_hint="Select Dependent"
    app:ms_floatingLabelText="Select Dependent"
    app:ms_enableFloatingLabel="true"
    android:layout_margin="6dp"
    >

</fr.ganfra.materialspinner.MaterialSpinner>
    <fr.ganfra.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_device"
        app:ms_hint="Select Device"
        android:layout_below="@+id/select_dependent"
        app:ms_floatingLabelText="Select Device"
        app:ms_enableFloatingLabel="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        >

    </fr.ganfra.materialspinner.MaterialSpinner>
</RelativeLayout>